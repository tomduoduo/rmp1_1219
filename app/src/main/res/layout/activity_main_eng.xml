<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".MainActivity"
    android:gravity="center_horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/download_test"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/button_6"
            android:text="下载测试"
            android:textSize="12dp"
            android:textColor="@color/colorGrayLight"
            android:layout_marginTop="100dp"
            android:layout_gravity="center|top"
            android:alpha="0"/>

        <Button
            android:id="@+id/lang_change"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/input_box_6"
            android:text="中文"
            android:textSize="12dp"
            android:textColor="@color/colorGrayLight"
            android:layout_marginTop="100dp"
            android:layout_gravity="center|top"
            android:alpha="1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:src="@drawable/gradient_black_2"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="top|center"
            android:background="@drawable/input_box"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="150dp"
            android:text="Version">
        </TextView>

<!--        <pl.droidsonroids.gif.GifTextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:drawableTop="@drawable/login"-->
<!--            android:layout_marginTop="-15dp"-->
<!--            android:alpha="0.0"/>-->

            <ImageView
                android:id="@+id/ls"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="210dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_9"/>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="210dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="430dp">

            <EditText
                android:id="@+id/username"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:hint="Username"
                android:paddingLeft="15dp"
                android:textSize="15dp"
                android:textColor="@color/colorGrayLight"
                android:textColorHint="@color/colorGrayLight"
                android:background="@drawable/input_box_5"
                android:layout_marginTop="30dp"
                android:inputType="text"
                android:text=""/>

            <EditText
                android:id="@+id/password"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:hint="Paassword"
                android:paddingLeft="15dp"
                android:textSize="15dp"
                android:textColor="@color/colorGrayLight"
                android:textColorHint="@color/colorGrayLight"
                android:background="@drawable/input_box_5"
                android:layout_marginTop="80dp"
                android:inputType="textPassword"
                android:text=""/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/button_1"
                android:text="Login"
                android:textSize="12dp"
                android:textColor="@color/colorGrayLight"
                android:layout_marginTop="130dp"
                android:layout_gravity="right"/>

            <Button
                android:id="@+id/btn_update"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/button_4"
                android:text="Long Press to Update"
                android:textSize="10dp"
                android:textColor="@color/colorNearBlack"
                android:layout_marginTop="130dp"
                android:layout_gravity="left"/>

        </FrameLayout>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/mr_logo_2024"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/master_btn_login"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/button_6"
            android:text="无验证登录"
            android:textSize="12dp"
            android:textColor="@color/colorGrayLight"
            android:layout_marginTop="50dp"
            android:layout_gravity="center|top"
            android:alpha="0"/>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>