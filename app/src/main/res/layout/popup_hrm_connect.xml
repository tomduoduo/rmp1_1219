<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <FrameLayout
        android:layout_width="370dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_grid"
        android:alpha="1">

        <TextView
            android:id="@+id/belts_count_RM"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:layout_gravity="left|top"
            android:text="0"
            android:paddingTop="1dp"
            android:paddingRight="9dp"
            android:textSize="13sp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="103dp"
            android:gravity="right"
            android:drawableLeft="@drawable/heart"
            android:paddingLeft="5dp"
            android:textColor="@color/colorNearBlack"
            android:background="@drawable/input_box_6">
        </TextView>


        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/colorGrayDark"
            android:text="心率表"
            android:layout_gravity="left|top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/scanning_tx_RM"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/colorGrayDark"
            android:text="扫描中..."
            android:layout_gravity="left|top"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="16dp"
            android:alpha="0"/>

        <Button
            android:id="@+id/HRM_close_RM"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textColor="@color/colorGrayDark"
            android:background="@color/colorGrayLight"
            android:text="关闭"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/HRM_scan_RM"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textColor="@color/colorNearBlack"
            android:background="@drawable/gradient_orange"
            android:text="扫描"
            android:layout_gravity="top|right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="53dp"
            />

        <Button
            android:id="@+id/HRM_connect_RM"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/gradient_green"
            android:text="连接"
            android:layout_gravity="top|right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="85dp"
            />

        <TextView
            android:id="@+id/HRM4_status_RM"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:background="@color/colorGrayLight"
            android:layout_gravity="left|top"
            android:layout_marginTop="53dp"
            android:layout_marginLeft="220dp"/>

        <TextView
            android:id="@+id/HRM3_status_RM"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:background="@color/colorGrayLight"
            android:layout_gravity="left|top"
            android:layout_marginTop="53dp"
            android:layout_marginLeft="150dp"/>

        <TextView
            android:id="@+id/HRM2_status_RM"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:background="@color/colorGrayLight"
            android:layout_gravity="left|top"
            android:layout_marginTop="53dp"
            android:layout_marginLeft="80dp"/>

        <TextView
            android:id="@+id/HRM1_status_RM"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:background="@color/colorGrayLight"
            android:layout_gravity="left|top"
            android:layout_marginTop="53dp"
            android:layout_marginLeft="10dp"/>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@drawable/input_box"
            android:layout_gravity="left|top"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:text="P1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorNearBlack">
            </TextView>

            <Spinner
                android:id="@+id/hr_1_spinner_RM"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:background="@color/colorGrayDark"
                android:entries="@array/BeltsName"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@drawable/input_box"
            android:layout_gravity="left|top"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="80dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:text="P2"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorNearBlack">
            </TextView>

            <Spinner
                android:id="@+id/hr_2_spinner_RM"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/colorGrayDark"
                android:entries="@array/BeltsName"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@drawable/input_box"
            android:layout_gravity="left|top"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="150dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:text="P3"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorNearBlack">
            </TextView>

            <Spinner
                android:id="@+id/hr_3_spinner_RM"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:background="@color/colorGrayDark"
                android:entries="@array/BeltsName"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@drawable/input_box"
            android:layout_gravity="left|top"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="220dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:text="P4"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorNearBlack">
            </TextView>

            <Spinner
                android:id="@+id/hr_4_spinner_RM"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:background="@color/colorGrayDark"
                android:entries="@array/BeltsName"/>

        </FrameLayout>



    </FrameLayout>











</FrameLayout>