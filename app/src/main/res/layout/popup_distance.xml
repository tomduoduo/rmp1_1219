<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/gradient_light_round_edge"
    android:alpha="0.95">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/colorGrayDark"
        android:text="计划划行距离"
        android:layout_gravity="center"
        android:layout_marginRight="220dp"
        android:layout_marginBottom="110dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="@color/colorGrayDark"
        android:text="桨频采样区间"
        android:layout_gravity="center"
        android:layout_marginRight="220dp"
        android:layout_marginBottom="-70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="@color/colorGrayDark"
        android:text="加速度敏感度"
        android:layout_gravity="center"
        android:layout_marginRight="220dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="@color/colorGrayDark"
        android:text="两桨最小间隔"
        android:layout_gravity="center"
        android:layout_marginRight="-80dp"
        android:layout_marginBottom="-70dp"/>


    <com.xw.repo.BubbleSeekBar
        android:id="@+id/distance_slider"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        app:bsb_min="1000"
        app:bsb_max="9000"
        app:bsb_progress="1000"
        app:bsb_second_track_color="@color/colorGreenDark"
        app:bsb_track_color="@color/colorGrayLight" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/SR_sensitivity_slider"
        android:layout_gravity="center"
        android:layout_marginBottom="-100dp"
        android:layout_marginRight="105dp"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        app:bsb_min="1"
        app:bsb_max="10"
        app:bsb_progress="2"
        app:bsb_second_track_color="@color/colorOrangeDark"
        app:bsb_track_color="@color/colorGrayLight" />


    <com.xw.repo.BubbleSeekBar
        android:id="@+id/SR_minSpeed_slider"
        android:layout_gravity="center"
        android:layout_marginBottom="-30dp"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        app:bsb_min="0"
        app:bsb_max="100"
        app:bsb_progress="30"
        app:bsb_second_track_color="@color/colorOrangeDark"
        app:bsb_track_color="@color/colorGrayLight" />


    <com.xw.repo.BubbleSeekBar
        android:id="@+id/SR_minGap_slider"
        android:layout_gravity="center"
        android:layout_marginBottom="-100dp"
        android:layout_marginLeft="150dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:bsb_min="0"
        app:bsb_max="100"
        app:bsb_progress="40"
        app:bsb_second_track_color="@color/colorOrangeDark"
        app:bsb_track_color="@color/colorGrayLight" />






</FrameLayout>