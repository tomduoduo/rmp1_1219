<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModeSelect">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_light">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_black">
        </ImageView>


        <Button
            android:id="@+id/speedometer_button"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/button_a"
            android:layout_weight="1"
            android:text="智能桨频表"
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:textColor="@color/colorNearBlack"
            android:paddingTop="30dp"
            android:paddingLeft="35dp"
            android:gravity="left"
            />

        <Button
            android:id="@+id/ble_button"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/button_b"
            android:layout_weight="1"
            android:text="力学监测"
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:paddingTop="30dp"
            android:paddingLeft="35dp"
            android:gravity="left"/>

        <Button
            android:id="@+id/playback_button"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/button_c"
            android:layout_weight="1"
            android:text="数据回放"
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:paddingTop="30dp"
            android:paddingLeft="35dp"
            android:gravity="left"/>

        <Button
            android:id="@+id/heartRate_button"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/gradient_red"
            android:layout_gravity="top|right"
            android:layout_marginRight="60dp"
            android:layout_marginTop="100dp"
            android:alpha="0">

        </Button>



    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>